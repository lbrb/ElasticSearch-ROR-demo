<div class="user-form">
  <%= form_for(@user) do |f| %>
    <div class="field">
      <%= f.label :name %><br />
      <%= f.text_field :name, autocomplete: "off" %>
    </div>
    <div class="field">
      <%= f.label :intro %><br />
      <%= f.text_area :intro, autocomplete: "off" %>
    </div>
    <div class="actions">
      <%= f.submit %>
    </div>
  <% end %>

  <%= link_to root_path, class: "back" do %>
    <i class="fa fa-arrow-left">Back</i>
  <% end %>
</div>
